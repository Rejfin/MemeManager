FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN ["npm", "run", "build"]

FROM node:18-alpine AS server
WORKDIR /app
COPY package*.json ./
RUN npm install --omit=dev
COPY --from=builder app/build ./build
COPY --from=builder app/src/.env ./build
EXPOSE 3070
CMD ["node", "build/index.js"]